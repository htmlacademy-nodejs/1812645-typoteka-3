extends layout-admin

block content
  main.main-page.main-page--padding
    section.main-page__category.category
      h1.category__title Категории
      .category__add-form
        form(action=`/my/categories` method='post')
          input#add-form-add-category(type='text' name='addCategoryName' placeholder='Новая категория' required='')
          label(for='add-form-add-category')
            span.visually-hidden Добавить категорию
          button.category__button.button.button--category(type='submit') Добавить

      ul.category__list
        each category in categories
          li.category__list-item
            form(action=`/my/categories/${category.id}` method='post')
              input#modify-form-category-1(type='text' name='editCategoryName' value=`${category.name}`)
              label(for='modify-form-category-1')
                span.visually-hidden Редактировать категорию
              button.category__button.button.button--category(type='submit') Сохранить
              button.category__button.button.button--category.delete__button(type='button' name="category" data=`/my/categories/${category.id}`) Удалить

      +insertErrorMessageForComments(validationMessages)
