extends admin/layout-admin

block content
    main
      section.search-page
        .search-page__wrapper
          h1 Результаты поиска
          .search.search-page__form
            form(action=`/search` method='get' autocomplete='off')
              label
                input(type='text' placeholder='Что ищем?' value=`${query ? query : 'Что ищем?'}` name='query')
              button.search__button.button.button--transparent(type='submit') Найти

            if (results.length === 0)
              .search__result
                p.search-page__empty Ничего не нашлось
            else
              each result in results
                .search__result
                  time.search__date(datetime='2019-03-21T20:33') #{result.createDate}
                  a.search__link #{result.title}
